@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <a class="active"> Sign In </a>
        <a class="inactive underlineHover" asp-area="" asp-controller="Auth" asp-action="Register">Sign Up </a>
        <form asp-controller="Auth" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="block">
                <input asp-for="Username" type="text" id="login" class="fadeIn second" name="Username" placeholder="login">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="block">
                <input asp-for="Password" type="text" id="password" class="fadeIn third" name="Password" placeholder="password">
                <span asp-validation-for="Password"></span>
            </div>
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>
        <div id="formFooter">
            <h7 class="underlineHover" href="#">Forgot Password?</h7>
        </div>

    </div>
</div>